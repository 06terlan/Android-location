<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/colorMainBack"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:background="@color/btnBackColor"
        android:text="Start" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:background="@color/btnBackColor"
        android:text="Stop" />

    <Button
        android:id="@+id/btn_location_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:background="@color/btnBackColor"
        android:text="Location" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:background="@color/btnBackColor"
        android:text="Map" />

    <Button
        android:id="@+id/btn_map_ofline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:background="@color/btnBackColor"
        android:text="Ofline Map" />

    <TextView
        android:id="@+id/tw_locationText"
        android:text="Current Locations"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tw_location"
        android:text="Latitude: 0 Longitude: 0"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:textSize="20dp" />

</LinearLayout>